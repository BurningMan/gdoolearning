<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="hibernatecourses.entity.SubjectEntity" table="subject">
        <id name="id">
            <column name="id" sql-type="int" length="10" not-null="true"/>
            <generator class="increment"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar" length="45"/>
        </property>

        <set name="courseEntity" cascade="save-update" table="course">
            <key>
                <column name="subject_id" not-null="true"/>
            </key>
            <one-to-many class="hibernatecourses.entity.SubmissionEntity"/>
        </set>
    </class>

</hibernate-mapping>