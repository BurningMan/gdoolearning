<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="hibernatecourses.entity.SubmissionEntity" table="submission">
        <id name="id">
            <column name="id" sql-type="int" length="10" not-null="true"/>
        </id>
        <property name="studentId">
            <column name="student_id" sql-type="int" length="10"/>
        </property>
        <property name="courseId">
            <column name="course_id" sql-type="int" length="10"/>
        </property>
    </class>
</hibernate-mapping>