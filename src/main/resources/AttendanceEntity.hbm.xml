<?xml version='1.0' encoding='utf-8'?>
<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping"
        xsi:schemaLocation="http://www.hibernate.org/xsd/hibernate-mapping http://www.hibernate.org/xsd/hibernate-mapping/hibernate-mapping-4.0.xsd" 
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <class name="hibernatecourses.entity.AttendanceEntity" table="attendance">
        <id name="id">
            <column name="id" sql-type="int" length="10" not-null="true"/>
        </id>
        <property name="studentId">
            <column name="student_id" sql-type="int" length="10"/>
        </property>
        <property name="lessonId">
            <column name="lesson_id" sql-type="int" length="10"/>
        </property>
    </class>
</hibernate-mapping>