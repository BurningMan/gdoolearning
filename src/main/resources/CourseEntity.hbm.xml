<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="hibernatecourses.entity.CourseEntity" table="course" schema="" catalog="university">
        <id name="id">
            <column name="id" sql-type="int" length="10" not-null="true"/>
        </id>
        <property name="subjectId">
            <column name="subject_id" sql-type="int" length="10"/>
        </property>

        <set name="submissionEntity" cascade="save-update" table="submission">
            <key>
                <column name="course_id" not-null="true" />
            </key>
            <one-to-many class="hibernatecourses.entity.SubmissionEntity" />
        </set>

        <set name="lessonEntity" cascade="save-update" table="lesson">
            <key>
                <column name="course_id" not-null="true" />
            </key>
            <one-to-many class="hibernatecourses.entity.LessonEntity" />
        </set>
    </class>
</hibernate-mapping>