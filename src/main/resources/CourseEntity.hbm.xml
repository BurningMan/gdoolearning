<?xml version='1.0' encoding='utf-8'?>
<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping"
        xsi:schemaLocation="http://www.hibernate.org/xsd/hibernate-mapping http://www.hibernate.org/xsd/hibernate-mapping/hibernate-mapping-4.0.xsd" 
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <class name="hibernatecourses.entity.CourseEntity" table="course">
        <id name="id">
            <column name="id" sql-type="int" length="10" not-null="true"/>
        </id>
        <property name="subjectId">
            <column name="subject_id" sql-type="int" length="10"/>
        </property>

        <set name="SubmissionEntity" cascade="update" table="submission">
            <key>
                <column name="course_id" not-null="true" />
            </key>
            <one-to-many class="hibernatecourses.entity.SubmissionEntity" />
        </set>

        <set name="LessonEntity" cascade="update" table="lesson">
            <key>
                <column name="course_id" not-null="true" />
            </key>
            <one-to-many class="hibernatecourses.entity.LessonEntity" />
        </set>
    </class>
</hibernate-mapping>