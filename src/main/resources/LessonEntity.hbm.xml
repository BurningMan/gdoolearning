<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="hibernatecourses.entity.LessonEntity" table="lesson" schema="" catalog="university">
        <id name="id">
            <column name="id" sql-type="int" length="10" not-null="true"/>
        </id>
        <property name="courseId">
            <column name="course_id" sql-type="int" length="10"/>
        </property>
        <property name="startTime">
            <column name="start_time" sql-type="timestamp" not-null="true"/>
        </property>
        <property name="topic">
            <column name="topic" sql-type="varchar" length="80"/>
        </property>

        <set name="AttendanceEntity" cascade="save-update" table="attendance">
            <key>
                <column name="lesson_id" not-null="true" />
            </key>
            <one-to-many class="hibernatecourses.entity.AttendanceEntity" />
        </set>
    </class>
</hibernate-mapping>