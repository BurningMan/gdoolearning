<?xml version='1.0' encoding='utf-8'?>
<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping"
        xsi:schemaLocation="http://www.hibernate.org/xsd/hibernate-mapping http://www.hibernate.org/xsd/hibernate-mapping/hibernate-mapping-4.0.xsd" 
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <class name="hibernatecourses.entity.LessonEntity" table="lesson" schema="" catalog="university">
        <id name="id">
            <column name="id" sql-type="int" length="10" not-null="true"/>
        </id>
        <property name="courseId">
            <column name="course_id" sql-type="int" length="10"/>
        </property>
        <property name="date">
            <column name="date" sql-type="timestamp" length="19" not-null="true"/>
        </property>
        <property name="topic">
            <column name="topic" sql-type="varchar" length="80"/>
        </property>
    </class>
</hibernate-mapping>