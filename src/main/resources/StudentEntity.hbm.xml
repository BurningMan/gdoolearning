<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="hibernatecourses.entity.StudentEntity" table="student">
        <id name="id">
            <column name="id" sql-type="int" length="10" not-null="true"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar" length="45"/>
        </property>

        <set name="submissionEntity" cascade="delete" table="submission">
            <key>
                <column name="student_id" not-null="true" />
            </key>
            <one-to-many class="hibernatecourses.entity.SubmissionEntity" />
        </set>

        <set name="attendanceEntity" cascade="save-update" table="attendance">
            <key>
                <column name="student_id" not-null="true" />
            </key>
            <one-to-many class="hibernatecourses.entity.AttendanceEntity" />
        </set>
    </class>
</hibernate-mapping>