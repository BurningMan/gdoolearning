<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="hibernatecourses.entity.AttendanceEntity" table="attendance">
        <id name="id">
            <column name="id" sql-type="int" length="10" not-null="true"/>
            <generator class="increment"/>
        </id>
        <set name="studentEntity" cascade="save-update" table="student">
            <key>
                <column name="id" not-null="true"/>
            </key>
            <one-to-many class="hibernatecourses.entity.StudentEntity"/>
        </set>
        <set name="lessonEntity" cascade="save-update" table="lesson">
            <key>
                <column name="id" not-null="true"/>
            </key>
            <one-to-many class="hibernatecourses.entity.LessonEntity"/>
        </set>
    </class>
</hibernate-mapping>